{% use "@Contao/component/_figure.html.twig" %}
{% use "@Contao/component/_company_contact.html.twig" %}

<div class="person" itemscope itemtype="http://schema.org/Person">
    {% block bk_image %}
        {% if image|default %}
            {% with {figure: image} %}{{ block('figure_component') }}{% endwith %}
        {% endif %}
    {% endblock %}

    {% block bk_name %}
        <div class="person__content">
            {% if name|default %}<span class="person__name">{{ name }}</span>{% endif %}
            {% if position|default %}<span>{{ position }}</span>{% endif %}
        </div>
    {% endblock %}

    {% block bk_email %}
        {% if email|default %}
            <div class="person__content">
                <span class="label">{{ attribute(attribute(translation, 'email' ),0) }}</span>
                <span class="value">{{ email }}</span>
            </div>
        {% endif %}
    {% endblock %}

    {% block bk_contact %}
        <div class="person__content">
            {% if phone|default %}
                <span class="label">{{ attribute(attribute(translation, 'phone' ),0) }}</span>
                <a href="tel:{{ phoneFormatted }}" class="value" title="{{ phone }}">{{ phone }}</a>
            {% endif %}
            {% if mobile|default %}
                <span class="label">{{ attribute(attribute(translation, 'mobile' ),0) }}</span>
                <span class="value">{{ mobile }}</span>
            {% endif %}
            {% if fax|default %}
                <span class="label">{{ attribute(attribute(translation, 'fax' ),0) }}</span>
                <span class="value">{{ fax }}</span>
            {% endif %}
        </div>
    {% endblock %}

    {% block bk_address %}
        <div class="person__content">
            {% if street|default %}
                <span>{{ street }}</span>
            {% endif %}
            <div class="person__address">
                {% if postal|default %}
                    <span>{{ postal }}</span>
                {% endif %}
                {% if city|default %}
                    <span class="city">{{ city }}</span>
                {% endif %}
            </div>
            {% if country|default %}
                <span class="country">{{ country }}</span>
            {% endif %}
        </div>
    {% endblock %}

    {% block bk_office %}
        <div class="person__content">
            {% if officeHours|default %}
                <span>{{ officeHours }}</span>
            {% endif %}
        </div>
    {% endblock %}
</div>